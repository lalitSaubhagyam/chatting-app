<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        #messages {
            border: 1px solid #ddd;
            padding: 10px;
            height: 400px;
            overflow-y: scroll;
        }
        #form {
            display: flex;
            margin-top: 10px;
        }
        #input {
            flex: 1;
            padding: 10px;
        }
        .user-list {
            border: 1px solid #ddd;
            padding: 10px;
            height: 400px;
            overflow-y: scroll;
        }
        .message {
            display: flex;
            justify-content: space-between;
            padding: 5px 0;
        }
        .timestamp {
            margin-left: 10px;
            color: gray;
            font-size: 0.8em;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Welcome, <%= username %></h1>
        <div class="row">
            <div class="col-md-4">
                <h2>User List</h2>
                <div class="user-list">
                    <ul id="userList">
                        <% users.forEach(user => { %>
                            <li><a href="#" class="start-chat" data-user-id="<%= user._id %>"><%= user.username %></a></li>
                        <% }) %>
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <h2>Chat</h2>
                <div id="messages" class="mt-4"></div>
                <form id="form" action="" class="mt-3">
                    <input id="input" autocomplete="off" class="form-control" placeholder="Type a message" /><button class="btn btn-primary ml-2">Send</button>
                </form>
            </div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const userList = document.getElementById('userList');
        const form = document.getElementById('form');
        const input = document.getElementById('input');
        const messages = document.getElementById('messages');
        let currentReceiverId = null;
        const userId = '<%= userId %>';

        // Join user-specific room
        socket.emit('join', userId);

        // Start chat with selected user
        userList.addEventListener('click', (e) => {
            if (e.target.classList.contains('start-chat')) {
                e.preventDefault();
                currentReceiverId = e.target.getAttribute('data-user-id');
                fetch(`/messages/${currentReceiverId}`)
                    .then(response => response.json())
                    .then(data => {
                        messages.innerHTML = '';
                        data.forEach(msg => {
                            const item = document.createElement('div');
                            item.className = 'message';
                            item.innerHTML = `<span>${msg.sender.username}: ${msg.content}</span><span class="timestamp">${new Date(msg.timestamp).toLocaleTimeString()}</span>`;
                            messages.appendChild(item);
                        });
                        messages.scrollTop = messages.scrollHeight;
                    });
            }
        });

        form.addEventListener('submit', (e) => {
            e.preventDefault();
            if (input.value && currentReceiverId) {
                socket.emit('chat message', { content: input.value, receiverId: currentReceiverId, senderId: userId });
                input.value = '';
            }
        });

        socket.on('chat message', (data) => {
            if (currentReceiverId) {
                const item = document.createElement('div');
                item.className = 'message';
                item.innerHTML = `<span>${data.senderName}: ${data.content}</span><span class="timestamp">${new Date(data.timestamp).toLocaleTimeString()}</span>`;
                messages.appendChild(item);
                messages.scrollTop = messages.scrollHeight;
            }
        });
    </script>
</body>
</html>
