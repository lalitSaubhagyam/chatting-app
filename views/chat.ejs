<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Application</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f7f9;
        }
        .container {
            display: flex;
            height: 100vh;
        }

        .navbar {
            width: 250px;
            background-color: #1e2a38;
            color: #ffffff;
            display: flex;
            flex-direction: column;
            padding: 15px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

        .nav-btn {
            background: none;
            border: none;
            color: #ffffff;
            padding: 10px;
            text-align: left;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .nav-btn.active,
        .nav-btn:hover {
            background-color: #2a3c5c;
        }

        .main-content {
            display: flex;
            flex: 1;
        }

        .list-section {
            width: 250px;
            background-color: #ffffff;
            border-right: 1px solid #e1e5ea;
            padding: 15px;
            overflow-y: auto;
        }

        .list-item {
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .list-item.selected {
            background-color: #5a8d8d;
            color: #ffffff;
        }

        .chat-section {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .chat-header {
            background-color: #ffffff;
            padding: 15px;
            border-bottom: 1px solid #e1e5ea;
            font-weight: bold;
            color: #1e2a38;
        }

        .members-list {
            background-color: #ffffff;
            padding: 10px;
            border-bottom: 1px solid #e1e5ea;
            overflow-x: auto;
            white-space: nowrap;
        }

        .members-list span {
            display: inline-block;
            margin-right: 10px;
            background-color: #f1f1f1;
            padding: 5px;
            border-radius: 5px;
        }

        .messages {
            flex: 1;
            overflow-y: auto;
            padding: 15px;
            background-color: #ffffff;
            border-bottom: 1px solid #e1e5ea;
        }

        .message-input {
            display: flex;
            padding: 10px;
            background-color: #f4f7f9;
            border-top: 1px solid #e1e5ea;
        }

        #messageInput {
            flex: 1;
            padding: 10px;
            border: 1px solid #d1d5d8;
            border-radius: 5px;
            font-size: 16px;
        }

        #sendBtn {
            padding: 10px;
            border: none;
            background-color: #5a8d8d;
            color: #ffffff;
            cursor: pointer;
            border-radius: 5px;
            font-size: 16px;
            margin-left: 10px;
            transition: background-color 0.3s ease;
        }

        #sendBtn:hover {
            background-color: #4a6e6e;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="navbar">
            <button id="usersBtn" class="nav-btn active">Users</button>
            <button id="groupsBtn" class="nav-btn">Groups</button>
        </div>
        <div class="main-content">
            <div id="listSection" class="list-section">
                <!-- User or group list will be dynamically populated here -->
            </div>
            <div id="chatSection" class="chat-section">
                <div id="chatHeader" class="chat-header">
                    <!-- Chat header (e.g., user or group name) -->
                </div>
                <div id="membersList" class="members-list">
                    <!-- Group members will be displayed here -->
                </div>
                <div id="messages" class="messages">
                    <!-- Chat messages will be dynamically populated here -->
                </div>
                <div class="message-input">
                    <input type="text" id="messageInput" placeholder="Type a message">
                    <button id="sendBtn">Send</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const usersBtn = document.getElementById('usersBtn');
            const groupsBtn = document.getElementById('groupsBtn');
            const listSection = document.getElementById('listSection');
            const chatHeader = document.getElementById('chatHeader');
            const membersList = document.getElementById('membersList');
            const messages = document.getElementById('messages');
            const messageInput = document.getElementById('messageInput');
            const sendBtn = document.getElementById('sendBtn');

            let selectedItem = null;
            let currentGroupId = null;

            usersBtn.addEventListener('click', () => {
                usersBtn.classList.add('active');
                groupsBtn.classList.remove('active');
                loadUserList();
            });

            groupsBtn.addEventListener('click', () => {
                groupsBtn.classList.add('active');
                usersBtn.classList.remove('active');
                loadGroupList();
            });

            sendBtn.addEventListener('click', () => {
                const message = messageInput.value.trim();
                if (message) {
                    appendMessage(message, 'outgoing');
                    messageInput.value = '';
                }
            });

            messageInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    sendBtn.click();
                }
            });

            async function loadUserList() {
                try {
                    const response = await fetch('/getUserList');
                    const users = await response.json();
                    listSection.innerHTML = '';
                    users.forEach(user => {
                        const userDiv = document.createElement('div');
                        userDiv.textContent = user.username;
                        userDiv.classList.add('list-item');
                        userDiv.addEventListener('click', () => startChat(user.username, userDiv));
                        listSection.appendChild(userDiv);
                    });
                } catch (err) {
                    console.error('Error loading user list:', err);
                }
            }

            async function loadGroupList() {
                try {
                    const response = await fetch('/getGroupList');
                    const groups = await response.json();
                    listSection.innerHTML = '';
                    groups.forEach(group => {
                        const groupDiv = document.createElement('div');
                        groupDiv.textContent = group.name;
                        groupDiv.classList.add('list-item');
                        groupDiv.addEventListener('click', () => startChat(group._id, group.name, groupDiv));
                        listSection.appendChild(groupDiv);
                    });
                } catch (err) {
                    console.error('Error loading group list:', err);
                }
            }

            async function startChat(groupId, groupName, itemDiv) {
                if (selectedItem) {
                    selectedItem.classList.remove('selected');
                }
                itemDiv.classList.add('selected');
                selectedItem = itemDiv;
                currentGroupId = groupId;

                chatHeader.textContent = `Chat with ${groupName}`;
                membersList.innerHTML = '<p>Loading members...</p>';

                try {
                    const response = await fetch(`/getGroupMembers/${groupId}`);
                    const members = await response.json();
                    membersList.innerHTML = members.map(member => `<span>${member.username}</span>`).join('');
                } catch (err) {
                    console.error('Error loading group members:', err);
                    membersList.innerHTML = '<p>Error loading members.</p>';
                }

                messages.innerHTML = `<p class="system-message">You are now chatting with ${groupName}.</p>`;
            }

            function appendMessage(message, type) {
                const messageDiv = document.createElement('div');
                messageDiv.textContent = message;
                messageDiv.classList.add('message', type);
                messages.appendChild(messageDiv);
                messages.scrollTop = messages.scrollHeight;
            }
        });
    </script>
</body>
</html>
